SELECT m.title AS movie_title, g.genre_name
FROM movies m
JOIN genres g ON m.genre_id = g.genre_id;

SELECT m.title AS movie_title, d.director_name
FROM movies m
JOIN directors d ON m.director_id = d.director_id;

SELECT a.actor_name
FROM actors a
JOIN movie_actors ma ON a.actor_id = ma.actor_id
JOIN movies m ON ma.movie_id = m.movie_id
WHERE m.title = 'Inception';

SELECT g.genre_name, COUNT(m.movie_id) AS movie_count
FROM genres g
LEFT JOIN movies m ON g.genre_id = m.genre_id
GROUP BY g.genre_name;

SELECT g.genre_name, m.title AS highest_rated_movie, m.imdb_rating
FROM movies m
JOIN genres g ON m.genre_id = g.genre_id
WHERE m.imdb_rating = (
    SELECT MAX(m2.imdb_rating)
    FROM movies m2
    WHERE m2.genre_id = m.genre_id
);
